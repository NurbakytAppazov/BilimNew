                <a href="https://wa.me/77056644647" class="submit">Жазу</a>
            </div>
        </div>
    </div>
    @* MODAL *@

    @if (ViewBag.FreeVideos != null)
    {
        <div id="courses" class="courses">
            <h2>Тегін видео-сабақтар</h2>
            <div class="course-items">
                @foreach (var c in ViewBag.FreeVideos)
                {
                    <div class="course-item">
                        <div class="course-img">
                            <img src="/kursvideo/@c.PhotoUrl">
                        </div>
                        <div class="course-text">
                            <h2>@c.VideoName</h2>
                            <a href="/Home/Kurs">Көру</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    <div id="teacher" class="teacher">
