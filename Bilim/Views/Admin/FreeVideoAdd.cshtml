@model Bilim.DbFolder.Category
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "AddVideo";
}

<link href="~/css/kursEdit.css" rel="stylesheet">

<div class="content">
    <form asp-action="FreeVideoAdd" class="create" enctype="multipart/form-data">
        <div class="form-blocks">
            <div class="form-block">
                <label for="video-url">Категория аты:</label>
                <input asp-for="CategoryName" id="video-url" type="text" required>
            </div>
        </div>
        <div class="btn-block">
            <a href="/Admin/FreeVideoList">Болдырмау</a>
            <button type="submit">Сақтау</button>
        </div>
    </form>
</div>




<script type="text/javascript">
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#banner')
                    .attr('src', e.target.result)
                    .width('300px')
                    .height('200px');
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

